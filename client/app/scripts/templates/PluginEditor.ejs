<!-- Load file modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel"> Load Resources </h4>

      </div>
      <div class="modal-body">
        <h1 class='lead'> To get started, log in to your Appcubator account and select an app. Alternatively, you can add, edit and build on existing plugins in the repository. </h1>

		<form class="form-horizontal" role="form">
		  <div class="form-group">
		    <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
		    <div class="col-sm-10">
		      <input disabled type="email" class="form-control" id="inputEmail3" placeholder="Email">
		    </div>
		  </div>
		  <div class="form-group">
		    <label for="inputPassword3" class="col-sm-2 control-label">Password</label>
		    <div class="col-sm-10">
		      <input disabled type="password" class="form-control" id="inputPassword3" placeholder="Password">
		    </div>
		  </div>
		  <div class="form-group">
		    <div class="col-sm-offset-2 col-sm-10">
		      <div class="checkbox">
		        <label>
		          <input disabled type="checkbox"> Remember me
		        </label>
		      </div>
		    </div>
		  </div>
		  <div class="form-group">
		    <div class="col-sm-offset-2 col-sm-10">
		      <button disabled type="submit" class="btn btn-default">Sign in</button>
		    </div>
		  </div>
		</form>


      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>



<div id='pluginEditor' class='container-fluid'>
	<div class='row' id='pluginNavigator'>
		<div class='col-md-2' id='pluginBrowser'>

		</div>

		<div class='col-md-10' id='editorPanel'> 
			<div class='row'>
				<div class='col-md-3 col-md-offset-5' id='actionBar'>
					<div class="btn-group float-right">
					  <button id='loadButton' type="button" class="btn btn-default btn-sm">
					  	Load
					  </button>
					  <button id='previewButton' type="button" class="btn btn-default btn-sm">Preview</button>
					</div> 
					<div class='btn-group float-right'>
					  <button id='saveButton' type="button" class="btn btn-default btn-sm">Save</button>
					  <button id='publishButton' type="button" class="btn btn-success btn-sm">Publish</button>
					</div>
				</div>
				<div class='col-md-4' id='searchBar'>
						<div class="input-group float-right">
					      <input type="text" class="form-control">
					      <span class="input-group-btn">
					        <button class="btn btn-default" type="button">Go!</button>
					      </span>
					    </div><!-- /input-group -->					
				</div>
			</div>

			<h3> <small> template editor </small> </h3>

			<div class='row' id='templatePanel'> 
				<ul class="nav nav-tabs">

				  <li id='createTemplateGroup'>
					<div class="input-group">
					  <span class="input-group-btn">
					    <button class="btn btn-default" id='createNewTemplateButton' type="button">Create</button>
					  </span>	
					  <input type="text" placeholder="template name"id='newTemplateNameInput' class="form-control">
					</div><!-- /input-group -->
				  </li>
					
				  <li><a href="#">Configuration</a></li>
				  				  	<% console.log(app) %>

				   	<% if (app.currentGenerator !== undefined && app.currentObject !== undefined && app.currentModule !== undefined && app.currentPlugin !== undefined) { %>
					  	<% if (app.browsingLocalGenerators) { %>
					  		<% var o = app.currentObject.generators[app.currentPlugin][app.currentModule]; %>
					  	<%} else { %>
					  		<% var o = app.currentObject.generators[app.currentPlugin][app.currentModule]; %>
					  	<% } %>
					  	<% for (var i = 0; i < o.length; o++) { %>
					  		<% if (o[i].name === app.currentGenerator) { %>
					  			<% for (template in o[i].templates) { %>
					  				<% if (template == app.currentTemplate) { %>
					  					<li templatename='<%=template%>'class='active selectTemplateButton'> <a href='#'> <%= template %> </a> </li>
					  				<% } else { %>
					  					<li templatename='<%=template%>'class='selectTemplateButton'> <a href='#'> <%= template %> </a> </li>
					  				<% } %>
					  			<% } %>
					  		<% } %>
					  	<% } %>
				  	<% } %>


				</ul>
				<div class='col-md-12' > <div id='templateEditor'>  </div>  </div>
			</div>
			</hr>
			<h3> <small> code editor </small> </h3>

			<div class='row' id='codePanel'> 
				<div class='col-md-12' > <div id='codeEditor'>   </div> </div>
			</div>

		</div>
	</div>
</div>


